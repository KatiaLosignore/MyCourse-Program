@model List<CourseViewModel>    

<div class="container">

    <h1 class="text-primary me-5">
        <b>
            @ViewData["Title"]
        </b>
        <a class="btn btn-outline-primary btn-sm" asp-controller="Courses" asp-action="Create"><i class="fa fa-plus"></i><b>  Crea nuovo Corso</b></a>
    </h1>

    @foreach (CourseViewModel course in Model)
    {
        <hr>
        <div class="row course">
            <div class="col-md-1">
                <img src="@course.ImagePath" width="52" height="52">
            </div>
            <div class="col-md-3">
                <h2>@course.Title</h2>
                <author>di @course.Author</author>
            </div>
            <div class="col-md-2 rating" title="@course.Rating">
            @for(int i = 1; i <= 5; i++)
            {
                if (course.Rating >= i)
                {
                    <i class="fas fa-star"></i>
                }
                else if (course.Rating > i - 1)
                {
                    <i class="fas fa-star-half-alt"></i>
                }
                else
                {
                    <i class="far fa-star"></i>
                }
            }
            </div>
            <div class="col-md-2 price">
                @course.CurrentPrice 
                @if(!course.CurrentPrice.Equals(course.FullPrice)){
                    <br><s>@course.FullPrice</s>
                }
            </div>
            <div class="col-md-1 d-flex justify-content-center align-items-center">
                <a class="btn btn-outline-primary" asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">Dettaglio</a>
            </div>
            <div class="col-md-1 d-flex align-items-center">
                <a class="btn btn-outline-warning" asp-controller="Courses" asp-action="Update" asp-route-id="@course.Id">Modifica</a>
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <a class="btn btn-outline-danger" asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id">Elimina</a>
            </div>
        </div>
    }

</div>

